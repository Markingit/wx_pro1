<template name="postItem">
  <view class="post-container">
    <view class="post-author">
      <image class="authorImg" src="{{avatar}}"></image>
      <text class="authoDate">{{date}}</text>
    </view>
    <view>
      <text class="postTitle">{{title}}</text>
      <image class="containerImg" src="{{imgSrc}}"></image>
      <text class="postContent">{{content}}</text>
    </view>
    <view class="postLike">
      <image class="postLikeImg" src="/images/icon/chat.png"></image>
      <text class="postLikeFont">{{reading}}</text>
      <image class="postLikeImg" src="/images/icon/view.png"></image>
      <text class="postLikeFont">{{collection}}</text>
    </view>
  </view>
</template>